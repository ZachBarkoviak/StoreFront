@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            
            <section class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <form id="account" method="post">
                    <div class="text-center mb-1">
                        <a href="index.html" class="">
                            <h3 class="text-primary"><img src="~/img/t_FrontierGold.png" class="img-fluid px-1"/>Frontier Consolidated</h3>
                        </a>
                    </div>
                    <h3 class="text-center">Sign In</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating p-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-1">
                        <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox p-1">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary p-1">Log in</button>
                    </div>
                    <div class ="pt-4">
                        <p>
                            <a class="p-1" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a class="p-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a class="p-1" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
