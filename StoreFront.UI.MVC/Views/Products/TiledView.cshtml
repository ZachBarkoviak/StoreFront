@model IEnumerable<StoreFront.DATA.EF.Models.Product>

@{
    ViewData["Title"] = "TiledView";
}


<div class="row">
    <div class="col-md-6 offset-3 pt-4 text-center">
        <h2 class="text-primary">All Products</h2>
        <p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success mt-2 mx-1">Add Product</a>
            }
            <a asp-action="Index" class="btn btn-success mt-2">List View</a>
        </p>
    </div>
</div>


<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 py-3">
            <div class="box bg-secondary rounded p-2 text-center">
                <div class="rounded bg-none">
                    <a asp-action="Details" asp-route-id="@item.ProductId">
                        <img class="img-fluid productImg" src="~/img/t_@item.ProductImage" alt="@item.ProductName" longdesc="@item.ProductDescription" />
                    </a>
                </div>
                <div class="text-center p-2 my-2 rounded border border-danger">
                    <h5>
                        @item.ProductName
                    </h5>
                    <h6 class="">
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </h6>
                    <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.ProductId" class="btn btn-danger mb-2 mt-1 shadow-sm">
                        Add To Cart
                    </a>
                </div>
            </div>
        </div>
    }

</div>
